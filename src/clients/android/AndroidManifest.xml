<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="edu.rit.cs.distrivia" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="7"></uses-sdk>
	<instrumentation android:name="android.test.InstrumentationTestRunner"
		android:targetPackage="edu.rit.cs.distrivia"></instrumentation>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>


	<application android:label="@string/app_name" android:debuggable="true" android:icon="@drawable/distrivia_icon8">
		<uses-library android:name="android.test.runner" />
		<activity android:name=".LoginActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".RoundActivity" android:label="@string/app_name"></activity>
		<activity android:name=".JoinActivity" android:label="@string/app_name"></activity>
		<activity android:name=".LeaderboardActivity" android:label="@string/app_name" android:noHistory="true"></activity>

	</application>
</manifest>